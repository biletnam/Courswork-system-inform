}

<h2>Index</h2>
 @using (Html.BeginForm("InputSevies", "Input", new { id_order = ViewBag.IdOrder }))
 {
            <table>
                            <th>
                                <td>
                                    Тип услуги
                                </td>
                                <td>
                                    Дата использования
                                </td>
                                <td>
                                    Время начала использования
