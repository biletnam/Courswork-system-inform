                                {
                                    <td>
                                        @Html.TextBox("dateUse", null, new { style = "width: 250px;", type = "date", onchange = @"this.form.submit();" })
                                    </td>
                                }
                                
                                @* @if(@ViewBag.flagTimeUse) *@
                                {
