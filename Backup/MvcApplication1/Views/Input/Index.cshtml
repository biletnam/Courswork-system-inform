                                    </td>
                                }

                                @* @if(@ViewBag.flagPriceServies) *@
                                {
                                    <td>
                                        @Html.TextBox("priceServies", null, new { @Value = @ViewBag.PriceServies, style = "width: 100px; text-align: center: center;", disabled = "disabled" })
                                    </td>
                                }
                                
                            </tr>
                        </table>
 }