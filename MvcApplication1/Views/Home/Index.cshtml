</p>
<p>    
    @Html.ActionLink("Регистрация тарифов номеров и дополнительных услуг", "CreateTariff", "Tariff")
</p>
<p>
    @Html.ActionLink("Список свободных комнат", "ListRoom", "Room");
</p>    
<hr/>
    <h2>Текущие заказы:</h2>
<div>
   <h3>Список заказов</h3>
</div>
@Html.Action("ShowOrder", "Home");
                                 
    

    <br/><br/><br/>
            
    <div>
         @Html.ActionLink("Статистика", "Report", "Report")
         @Html.ActionLink("Отчеты", "ReportOut", "Report")
    </div>
    
}
else
{
    <h3>Рекомендуются следующие действия:</h3>
    <ol class="round">
        <li class="one">
            <h5>Приступая к работе</h5>
